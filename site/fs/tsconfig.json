{
  "extends": "../../base.tsconfig.jsonc",
  "compilerOptions": {
    "composite": true,
    "lib": [ "ESNext", "DOM", "DOM.Iterable" ],
    "allowUmdGlobalAccess": true,
    "moduleDetection": "force",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-native",
    "rootDir": ".",
    "noEmit": false,
    "outDir": "out",
    "paths": {
      "/api.js": [ "../api.js" ],
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "noUncheckedIndexedAccess": true,
  },
  "include": [
    "./**/*.tsx",
    "./**/*.ts",
    "../api.d.ts",
  ],
  "exclude": [
    "types.d.ts",
    "out",
  ],
  "references": [
    { "path": "../client" },
  ],
}
